html
  head
    link(rel='stylesheet', href='https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css', integrity='sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh', crossorigin='anonymous')
  body
    div.container
      nav.navbar.navbar-expand-lg.navbar-light.bg-light.sticky-top
        a.navbar-brand(href='/home')
          img(src="https://coders-x.com/images/logo@256.png", alt="", style="width: 150px; border-radius: 5px")
        button.navbar-toggler(type='button', data-toggle='collapse', data-target='#navbarSupportedContent', aria-controls='navbarSupportedContent', aria-expanded='false', aria-label='Toggle navigation')
          span.navbar-toggler-icon
        #navbarSupportedContent.collapse.navbar-collapse
          ul.navbar-nav.mr-auto
            li.nav-item.active
              a.nav-link(href='/home') Home
            li.nav-item.active
              a.nav-link(href='/book') Book
            li.nav-item.active
              a.nav-link(href='/transaction') Transaction
          form.form-inline.my-2.my-lg-0
            input.form-control.mr-sm-2(type='search', name="search", placeholder='Search', aria-label='Search')
            button.btn.btn-outline-success.my-2.my-sm-0(type='submit') Search
          if !user
            ul.navbar-nav
              li.nav-item  
                a.nav-link(href='/user/login') Login       
              li.nav-item  
                a.nav-link(href='/user/create') Sign up       
          else
           .dropdown
            span#dropdownMenuButton(type='button', data-toggle='dropdown', aria-haspopup='true', aria-expanded='false')
             img(src=user.avatar, alt="", style="width: 40px; height: 40px; border-radius: 50%")
             span.badge.badge-danger=user.cart.length
            .dropdown-menu(aria-labelledby='dropdownMenuButton')
             a.dropdown-item(href='/user/profile') Profile
             if user.isAdmin
               a.dropdown-item(href='/book/create') Create Book
               a.dropdown-item(href='/user/transaction') Manage Transaction
             a.dropdown-item(href='/cart') Cart
             a.dropdown-item(href='/user/logout') Logout            
      block content
    script(src='https://code.jquery.com/jquery-3.4.1.slim.min.js', integrity='sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n', crossorigin='anonymous')
    script(src='https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js', integrity='sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo', crossorigin='anonymous')
    script(src='https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js', integrity='sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6', crossorigin='anonymous')
