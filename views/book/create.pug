extends ../layout.pug
block content
 h3 Create book
 if errors
  each error in errors
   .alert.alert-warning
    p=error
 form(action="/book/create" method="POST")
  label(for="title")
  br
  input(type="text" id="title" name="title" value=title&&title)
  br
  label(for="description")
  br
  input(type="text" id="description" name="description" value=description&&description)
  br
  button(type="submit") Create