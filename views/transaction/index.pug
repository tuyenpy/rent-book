extends ../layout.pug
block content
 table.table.mt-5.mb-5
  thead
    tr
      th(scope='col') Image
      th(scope='col') Title
      th(scope='col') Price
      th(scope='col') Status
      th(scope='col') Date
  tbody
    if newTransactions
     each transaction in newTransactions
      tr
       td
        img(src=transaction.image, alt="", style="width: 50px; height: 50px")
       td=transaction.title
       td=transaction.price
       if !transaction.status
        td Borrowed
       else
        td Paid
       td=transaction.date