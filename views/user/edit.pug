extends ../layout
block content
 h3 Update profile
 if errors
  each error in errors
   .alert.alert-warning
    p=error
 form(action="/user/profile/update" method="POST" enctype="multipart/form-data")
  .form-group
   label(for="name") Name
   input.form-control(type="text" id="name" name="name")
  .form-group
   label(for="phone") Phone
   input.form-control(type="text" id="phone" name="phone")
  .form-group
   label(for="email") Email
   input.form-control(type="email" id="email" name="email")
  .form-group
   label(for="password") Password
   input.form-control(type="password" id="password" name="password")
  .form-group
   label(for="avatar") Avatar
   input.form-control-file(type="file" id="avatar" name="avatar")
  button.btn.btn-primary(type="submit") Update